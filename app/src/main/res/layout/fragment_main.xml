<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.exerciseappapi.ExerciseViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="281dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="18dp"
                    android:layout_toStartOf="@+id/addExerciseIcon"
                    android:background="@drawable/search_background"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="0dp"
                    android:hint="Search exercises by name"
                    android:inputType="text"
                    android:padding="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <ImageButton
                    android:id="@+id/addExerciseIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"

                    android:layout_toStartOf="@+id/filterIcon"
                    android:background="@drawable/search_background"
                    android:contentDescription="Add Exercise Icon"
                    android:padding="8dp"
                    android:src="@drawable/ic_add" />

                <ImageButton
                    android:id="@+id/filterIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/search_background"
                    android:contentDescription="Filter Icon"
                    android:padding="8dp"
                    android:src="@drawable/ic_filter" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/noExercisesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="Oops! ðŸ˜¢ We haven't found an exercise for that yet, maybe you can create a new one ðŸ˜‰"
                android:textSize="18sp"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:backgroundTint="@color/dark_blue"
                android:textColor="@color/white"
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/noExercisesCreateNewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Create A New Exercise"
                android:visibility="gone" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabConfirmSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:backgroundTint="@color/light_blue"
            app:srcCompat="@drawable/ic_add_exercises_to_workout"
            android:visibility="gone" />
    </FrameLayout>
</layout>
