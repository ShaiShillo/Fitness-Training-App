<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="exercise"
            type="com.example.exerciseappapi.Exercise" />
    </data>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/item_background"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/exerciseGif"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/gif_placeholder"
        android:contentDescription="Exercise Gif/Image"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exerciseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise Name:"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/exerciseTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target:"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/exerciseEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipment:"
            android:layout_marginTop="4dp" />
    </LinearLayout>
 </LinearLayout>
</layout>