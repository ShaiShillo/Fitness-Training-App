<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search exercises by name"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/bodyPartSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:prompt="@string/body_part_prompt" />

    <Spinner
        android:id="@+id/equipmentSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:prompt="@string/equipment_prompt" />

    <Spinner
        android:id="@+id/targetSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:prompt="@string/target_prompt" />

    <TextView
        android:id="@+id/noExercisesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oops! ðŸ˜¢ We haven't found an exercise for that yet, maybe you can create a new one ðŸ˜‰"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

</LinearLayout>
