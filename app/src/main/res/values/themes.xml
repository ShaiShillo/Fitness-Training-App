<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ExerciseAppAPI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="checkboxStyle">@style/MyCheckBox</item>
        <item name="android:windowBackground">@drawable/background_image</item>
        <item name="android:statusBarColor">@color/dark_blue</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ExerciseAppAPI" parent="Base.Theme.ExerciseAppAPI" />

    <!-- Add this style to handle the rounded corners -->
    <style name="ShapeAppearanceOverlay.MaterialComponents.ShapeableImageView.RoundedCorner8" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>

    </style>
    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ShapeAppearance.App.CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/dark_blue</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButton</item>
    </style>

    <style name="DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/selector_button_background</item>
    </style>

    <!-- Custom Checkbox Style -->
    <style name="MyCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.CheckBox</item>
    </style>

    <!-- Custom Theme Overlay for Checkbox -->
    <style name="ThemeOverlay.CheckBox" parent="">
        <item name="colorSecondary">@color/dark_blue</item>   <!-- checked -->
        <item name="colorOnSurface">@color/light_blue</item>  <!-- unchecked -->
    </style>
</resources>